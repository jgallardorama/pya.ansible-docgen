{% extends "base.html.j2" %}
{% block title %}{{ project.name }}{% endblock %}
{% block head %}
{{ super() }}
<style type="text/css">
    .important {
        color: #336699;
    }
</style>
{% endblock %}
{% block content %}
<h1>Project {{ project.name }}</h1>

<div>
    <h2>Branches</h2>
    <ul>
        {% for item in project.repo_refs.values() | 
                selectattr("repo_ref_type", "equalto", "RemoteReference")  %}
        <li>{{ item.name }}</li>
        {% endfor %}
    </ul>
</div>
<div>
    <h2>Tags</h2>
    <ul>
        {% for item in project.repo_refs.values() | 
                selectattr("repo_ref_type", "equalto", "TagReference") %}
        <li>{{ item.name }}</li>
        {% endfor %}
    </ul>
</div>
<div>
    <h2>Properties</h2>
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
            {% for project_info_property in project.get_properties('project-info') %}
            <tr>
                <th scope="row">{{ project_info_property.name }}</th>
                <td>{{ project_info_property.value }}</td>
            </tr>
            {% endfor %}      
        </tbody>
    </table>

</div>

<object type="image/svg+xml" data="{{ project.name }}.svg"></object>
{% endblock %}